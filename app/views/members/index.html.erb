<h1>Members</h1>

<table class="maint">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Home phone</th>
    <th>Work phone</th>
    <th>Cell phone</th>
    <th class="action"><%= link_to 'New', new_member_path %></th>
  </tr>

<% for member in @members %>
  <tr>
    <td><%= link_to h(member.first_name), member %></td>
    <td><%= link_to h(member.last_name), member %></td>
    <td><%=h member.home_phone %></td>
    <td><%=h member.work_phone %></td>
    <td><%=h member.cell_phone %></td>
    <td class="action">
      <%= link_to 'Edit', edit_member_path(member) %>
      <%= link_to 'Delete', member, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
