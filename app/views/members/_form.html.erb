<h1><%= title %> Member</h1>

<div class="entryaction">
<p>
  <% unless action == 'Create' %>
  <%= link_to 'Show', @member %> |
  <% end %>
  <%= link_to 'Back', members_path %>
</p>
</div>

<% form_for(@member) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <label for="member_family_id">Family:</label><br/>
    <%= select(:member, :family_id, @families.collect{ |family| [family.full_name, family.id] }, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.label :home_phone %><br />
    <%= f.text_field :home_phone %>
  </p>
  <p>
    <%= f.label :work_phone %><br />
    <%= f.text_field :work_phone %>
  </p>
  <p>
    <%= f.label :cell_phone %><br />
    <%= f.text_field :cell_phone %>
  </p>
  <p>
    <%= f.submit action %>
  </p>
<% end %>
